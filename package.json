{
  "name": "tcgconnect",
  "version": "1.0.0",
  "description": "Multi-device Pokemon TCG simulator",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:host\" \"npm run dev:player\"",
    "dev:server": "cd apps/server && npm run dev",
    "dev:host": "cd apps/host && npm run dev",
    "dev:player": "cd apps/player && npm run dev",
    "build": "npm run build:shared && npm run build:server && npm run build:host && npm run build:player",
    "build:shared": "cd packages/shared && npm run build",
    "build:server": "cd apps/server && npm run build",
    "build:host": "cd apps/host && npm run build",
    "build:player": "cd apps/player && npm run build",
    "install:all": "npm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "npm run typecheck:shared && npm run typecheck:server && npm run typecheck:host && npm run typecheck:player",
    "typecheck:shared": "cd packages/shared && tsc --noEmit",
    "typecheck:server": "cd apps/server && tsc --noEmit",
    "typecheck:host": "cd apps/host && tsc --noEmit",
    "typecheck:player": "cd apps/player && tsc --noEmit",
    "test": "npm run test:shared && npm run test:server && npm run test:host && npm run test:player",
    "test:shared": "cd packages/shared && npm run test",
    "test:server": "cd apps/server && npm run test",
    "test:host": "cd apps/host && npm run test",
    "test:player": "cd apps/player && npm run test",
    "test:coverage": "node scripts/collect-coverage.js",
    "test:coverage:open": "npm run test:coverage && open coverage/combined/index.html",
    "test:e2e": "cd tests/e2e && npm test",
    "test:e2e:install": "cd tests/e2e && npm install",
    "test:watch": "concurrently \"npm run test:shared -- --watch\" \"npm run test:server -- --watch\" \"npm run test:host -- --watch\" \"npm run test:player -- --watch\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
